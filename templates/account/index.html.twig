{% extends 'base.html.twig' %}

{% block title %}Mon compte - LuxWatch{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('styles/account.css') }}">
{% endblock %}

{% block body %}
    <div class="account-container">
        <h1>Mon compte</h1>
        
        <div class="account-sections">
            <div class="account-sidebar">
                <div class="profile-picture-container">
                    {% if user.profilePicture %}
                        <img src="{{ asset('uploads/profile_pictures/' ~ user.profilePicture) }}" alt="Photo de profil" class="profile-picture">
                    {% else %}
                        <div class="profile-picture-placeholder">
                            <i class="fas fa-user"></i>
                        </div>
                    {% endif %}
                    <button id="change-picture-btn" class="btn-secondary">Changer la photo</button>
                </div>
                <h2 class="username">{{ user.userName }}</h2>
                <p class="email">{{ user.email }}</p>
            </div>
            <div id="personal-info" class="info-section">
                <h2>Informations personnelles</h2>
                <div class="info-row">
                    <p>Nombre de montres mises en vente : {{ user.watches|length }}</p>
                    <p>Argent sur le compte : {{ user.balance }}</p>
                </div>
                
                <form id="personal-info-form" class="edit-form">
                    <div class="form-row">
                        <div class="form-group">
                            <label for="firstName">Prénom</label>
                            <input type="text" id="firstName" name="firstName" value="{{ user.firstName }}">
                        </div>
                        <div class="form-group">
                            <label for="lastName">Nom</label>
                            <input type="text" id="lastName" name="lastName" value="{{ user.lastName }}">
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group">
                            <label for="userName">Nom d'utilisateur</label>
                            <input type="text" id="userName" name="userName" value="{{ user.userName }}">
                        </div>
                        <div class="form-group">
                            <label for="email">Email</label>
                            <input type="email" id="email" name="email" value="{{ user.email }}">
                        </div>
                    </div>
                    <div class="form-actions">
                        <button type="submit" class="btn-primary">Enregistrer</button>
                    </div>
                </form>
            </div>
            
            <div id="my-watches" class="info-section">
                <h2>Mes montres</h2>
                
                {% if watches is empty %}
                    <p class="no-watches">Vous n'avez pas encore mis de montres en vente.</p>
                    <a href="{{ path('app_sell') }}" class="btn-primary">Vendre une montre</a>
                {% else %}
                    <div class="watches-grid">
                        {% for watch in watches %}
                            <div class="watch-card">
                                {% if watch.picture is defined and watch.picture %}
                                    <img src="{{ asset('uploads/watch_pictures/' ~ watch.picture) }}" alt="{{ watch.name }}" class="watch-image">
                                {% else %}
                                    <div class="watch-image-placeholder">Image non disponible</div>
                                {% endif %}
                                <div class="watch-info">
                                    <h3>{{ watch.name }}</h3>
                                    <p class="watch-price">{{ watch.price }} €</p>
                                    <div class="watch-actions">
                                        <a href="{{ path('app_watch_details', {'id': watch.id}) }}" class="btn-secondary">Voir</a>
                                        <a href="#" class="btn-danger">Supprimer</a>
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                    <a href="{{ path('app_sell') }}" class="btn-primary add-watch-btn">Ajouter une montre</a>
                {% endif %}
            </div>
            
            <div id="my-orders" class="info-section">
                <h2>Mes commandes</h2>
                
                {% if invoices is empty %}
                    <p class="no-orders">Vous n'avez pas encore passé de commande.</p>
                    <a href="{{ path('app_collection') }}" class="btn-primary">Découvrir la collection</a>
                {% else %}
                    <div class="orders-list">
                        {% for invoice in invoices %}
                            <div class="order-card">
                                <div class="order-header">
                                    <h3>Commande #{{ invoice.id }}</h3>
                                    {% if invoice.createdAt is defined %}
                                        <span class="order-date">{{ invoice.createdAt|date('d/m/Y') }}</span>
                                    {% endif %}
                                </div>
                                <div class="order-items">
                                    {% for item in invoice.cart %}
                                        <div class="order-item">
                                            <img src="{{ asset('uploads/watch_pictures/' ~ item.watch.picture) }}" alt="{{ item.watch.name }}" class="item-image">
                                            <div class="item-details">
                                                <p class="item-name">{{ item.watch.name }}</p>
                                                <p class="item-quantity">Quantité: {{ item.quantity }}</p>
                                                <p class="item-price">{{ item.watch.price * item.quantity }} €</p>
                                            </div>
                                        </div>
                                    {% endfor %}
                                </div>
                                <div class="order-footer">
                                    <p class="order-address">Livré à: {{ invoice.address }}, {{ invoice.postalCode }} {{ invoice.city }}</p>
                                    <a href="{{ path('app_order_confirmation', {'id': invoice.id}) }}" class="btn-secondary">Détails</a>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                {% endif %}
            </div>
            
            <div id="my-favorites" class="info-section">
                <h2>Mes favoris</h2>
                
                {% if favorites is empty %}
                    <p class="no-favorites">Vous n'avez pas encore ajouté de montres à vos favoris.</p>
                    <a href="{{ path('app_collection') }}" class="btn-primary">Découvrir la collection</a>
                {% else %}
                    <div class="favorites-grid">
                        {% for favorite in favorites %}
                            <div class="watch-card">
                                {% if favorite.watch is defined and favorite.watch.picture is defined %}
                                    <img src="{{ asset('uploads/watch_pictures/' ~ favorite.watch.picture) }}" alt="{{ favorite.watch.name }}" class="watch-image">
                                {% else %}
                                    <div class="watch-image-placeholder">Image non disponible</div>
                                {% endif %}
                                <div class="watch-info">
                                    <h3>{{ favorite.watch.name }}</h3>
                                    <p class="watch-price">{{ favorite.watch.price }} €</p>
                                    <div class="watch-actions">
                                        <a href="{{ path('app_watch_details', {'id': favorite.watch.id}) }}" class="btn-secondary">Voir</a>
                                        <a href="#" class="btn-danger">Retirer</a>
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('js/account.js') }}"></script>
{% endblock %}