{% extends 'base.html.twig' %}

{% block title %}Votre Panier - LuxWatch{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('styles/cart.css') }}">
{% endblock %}

{% block body %}
    <div class="cart-container">
        <h1>Votre Panier</h1>
        
        {% for message in app.flashes('success') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}
        
        {% for message in app.flashes('error') %}
            <div class="alert alert-danger">
                {{ message }}
            </div>
        {% endfor %}
        
        {% if cartItems is empty %}
            <div class="empty-cart">
                <p>Votre panier est vide.</p>
                <a href="{{ path('app_collection') }}" class="continue-shopping">Continuer mes achats</a>
            </div>
        {% else %}
            <div class="cart-items">
                <table class="cart-table">
                    <thead>
                        <tr>
                            <th>Produit</th>
                            <th>Prix unitaire</th>
                            <th>Quantité</th>
                            <th>Total</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for item in cartItems %}
                            {% set watch = app.user ? item.watch : item.watch %}
                            {% set quantity = app.user ? item.quantity : item.quantity %}
                            <tr>
                                <td class="product-info">
                                    <img src="{% if watch.author %}{{ asset('uploads/watch_pictures/' ~ watch.picture) }}{% else %}{{ watch.picture }}{% endif %}" alt="{{ watch.name }}">
                                    <div>
                                        <h3>{{ watch.name }}</h3>
                                        <p>Réf: {{ watch.reference }}</p>
                                    </div>
                                </td>
                                <td class="price">{{ watch.price|number_format(0, ',', ' ') }} €</td>
                                <td class="quantity">
                                    <form action="{{ path('app_cart_update', {'id': watch.id}) }}" method="post" class="quantity-form">
                                        <input type="number" name="quantity" value="{{ quantity }}" min="1" max="{{ watch.stock.watchStock }}">
                                        <button type="submit" class="update-btn">Mettre à jour</button>
                                    </form>
                                </td>
                                <td class="total">{{ (watch.price * quantity)|number_format(0, ',', ' ') }} €</td>
                                <td class="actions">
                                    <a href="{{ path('app_cart_remove', {'id': watch.id}) }}" class="remove-btn">
                                        <i class="fas fa-trash"></i> Supprimer
                                    </a>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
            
            <div class="cart-summary">
                <div class="summary-details">
                    <h2>Récapitulatif</h2>
                    <div class="summary-row">
                        <span>Sous-total</span>
                        <span>{{ total|number_format(0, ',', ' ') }} €</span>
                    </div>
                    <div class="summary-row">
                        <span>Livraison</span>
                        <span>Gratuite</span>
                    </div>
                    <div class="summary-row total-row">
                        <span>Total</span>
                        <span>{{ total|number_format(0, ',', ' ') }} €</span>
                    </div>
                </div>
                
                <div class="cart-actions">
                    <a href="{{ path('app_collection') }}" class="continue-shopping">Continuer mes achats</a>
                    <a href="{{ path('app_validate') }}" class="checkout-btn">Procéder au paiement</a>
                </div>
            </div>
        {% endif %}
    </div>
{% endblock %}
