{% extends 'base.html.twig' %}

{% block title %}Validation de commande - LuxWatch{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('styles/validate.css') }}">
{% endblock %}

{% block body %}
    <div class="validate-container">
        <h1>Adresse de livraison</h1>
        
        <form method="post">
            <div class="form-group">
                <label for="address">Adresse</label>
                <input type="text" id="address" name="address" value="{{ user.deliveryAddress }}" required>
            </div>
            
            <div class="form-group">
                <label for="postal_code">Code postal</label>
                <input type="text" id="postal_code" name="postal_code" value="{{ user.postalCode }}" required>
            </div>
            
            <div class="form-group">
                <label for="city">Ville</label>
                <input type="text" id="city" name="city" required>
            </div>
            
            <button type="submit" class="btn-submit">Continuer</button>
        </form>
    </div>
{% endblock %}
