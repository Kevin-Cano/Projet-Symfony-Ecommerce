{% extends 'base.html.twig' %}

{% block title %}Modifier la montre{% endblock %}

{% block body %}
    <div class="edit-watch">
        <h1>Modifier votre montre</h1>

        {{ form_start(form) }}
            {{ form_row(form.description) }}
            {{ form_row(form.state) }}
            {{ form_row(form.price) }}
            {{ form_row(form.picture) }}

            <button type="submit">Enregistrer les modifications</button>
            <a href="{{ path('app_particuliers') }}">Retour</a>
        {{ form_end(form) }}
    </div>
{% endblock %} 