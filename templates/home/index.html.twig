{% extends 'base.html.twig' %}

{% block title %}Montres de Luxe - Accueil{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .hero-section {
            position: relative;
            height: 100vh;
            width: 100%;
            overflow: hidden;
            display: flex;
            justify-content: center;
            align-items: center;
            color: white;
            text-align: center;
        }

        .video-background {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            z-index: -1;
        }

        .video-background video {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        .overlay {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.5);
            z-index: 0;
        }

        .content {
            position: relative;
            z-index: 1;
            max-width: 800px;
            padding: 20px;
        }

        h1 {
            font-size: 3.5rem;
            margin-bottom: 1rem;
            font-family: 'Playfair Display', serif;
        }

        .subtitle {
            font-size: 1.5rem;
            margin-bottom: 2rem;
            font-weight: 300;
        }

        .cta-button {
            display: inline-block;
            padding: 15px 30px;
            background-color: white;
            color: black;
            text-decoration: none;
            border-radius: 5px;
            font-weight: 500;
            transition: all 0.3s ease;
        }

        .cta-button:hover {
            background-color: #f8f8f8;
            transform: translateY(-2px);
        }
    </style>
{% endblock %}

{% block body %}
    <section class="hero-section">
        <div class="video-background">
            <video autoplay muted loop>
                <source src="{{ asset('videos/video.webm') }}" type="video/webm">
                Votre navigateur ne supporte pas la lecture de vidéos.
            </video>
        </div>
        <div class="overlay"></div>
        <div class="content">
            <h1>Découvrez notre collection de montres de luxe</h1>
            <p class="subtitle">L'élégance au poignet, la précision dans chaque détail</p>
            <a href="#" class="cta-button">Voir la collection</a>
        </div>
    </section>
{% endblock %}
