{% extends 'base.html.twig' %}

{% block title %}LuxWatch - Montres de Luxe{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/base.js') }}"></script>
{% endblock %}

{% block body %}
    

    <section class="hero-section">
        <div class="video-background">
            <video autoplay muted loop playsinline>
                <source src="{{ asset('videos/accueil.webm') }}" type="video/webm">
            </video>
        </div>
        <div class="overlay"></div>
        <div class="content">
            <h1>Découvrez notre collection de montres de luxe</h1>
            <p class="subtitle">L'élégance au poignet, la précision dans chaque détail</p>
            <a href="{{ path('app_collection') }}" class="cta-button">Voir la collection</a>
        </div>
    </section>

    <section class="best-sellers">
        <h2 class="section-title">Les Plus Vendus</h2>
        <div class="products-slider">
            <button class="slider-nav prev">
                <i class="fas fa-chevron-left"></i>
            </button>
            <div class="products-container">
                {% for watch in watches %}
                    <div class="product-card">
                        <a href="{{ path('app_watch_details', {'id': watch.id}) }}" class="product-link">
                            <img src="{{ watch.picture }}" alt="{{ watch.name }}">
                            <h3 class="product-title">{{ watch.name }}</h3>
                            <p class="product-subtitle">Édition limitée</p>
                            <button class="details-button">Voir les détails</button>
                        </a>
                    </div>
                {% endfor %}
            </div>
            <button class="slider-nav next">
                <i class="fas fa-chevron-right"></i>
            </button>
        </div>
    </section>

    <section class="particuliers">
        <h2 class="particuliers-title">Espace Particuliers</h2>
        <p class="particuliers-subtitle">Achetez et vendez vos montres de luxe entre passionnés</p>
        <a href="#" class="sell-button">Vendre ma montre</a>
        
        <div class="watches-grid">
            <div class="watch-card">
                <img src="{{ asset('images/test.webp') }}" alt="Rolex Datejust 41">
                <h3 class="watch-title">Rolex Datejust 41</h3>
                <p class="watch-state">État: Excellent</p>
                <p class="watch-price">Prix: 8,500 €</p>
                <p class="watch-seller">John Doe</p>
                <a href="#" class="contact-button">Contacter le vendeur</a>
            </div>
            
            <div class="watch-card">
                <img src="{{ asset('images/test.webp') }}" alt="Rolex Datejust 41">
                <h3 class="watch-title">Rolex Datejust 41</h3>
