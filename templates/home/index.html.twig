{% extends 'base.html.twig' %}

{% block title %}LuxWatch - Montres de Luxe{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/base.js') }}"></script>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('styles/home.css') }}">
{% endblock %}

{% block body %}
    <nav class="navbar">
        <a href="#" class="logo">LuxWatch</a>
        <div class="nav-links">
            <a href="#">Accueil</a>
            <a href="{{ path('app_collection') }}">Collection</a>
            <a href="#">Particuliers</a>
            <a href="#">Contact</a>
        </div>
        <div class="nav-icons">
            <div class="search-container">
                <input type="text" class="search-input" placeholder="Rechercher...">
                <a href="#" class="search-icon"><i class="fas fa-search"></i></a>
            </div>
            {% if app.user %}
                <a href="#" class="icon-link"><i class="fas fa-heart"></i></a>
                <a href="#" class="icon-link"><i class="fas fa-shopping-cart"></i></a>
                <a href="#" class="icon-link"><i class="fas fa-user"></i></a>
            {% else %}
                <a href="{{ path('app_login') }}" class="login-button">Se connecter</a>
            {% endif %}
        </div>
    </nav>

    <section class="hero-section">
        <div class="video-background">
            <video autoplay muted loop playsinline>
                <source src="{{ asset('videos/accueil.webm') }}" type="video/webm">
            </video>
        </div>
        <div class="overlay"></div>
        <div class="content">
            <h1>Découvrez notre collection de montres de luxe</h1>
            <p class="subtitle">L'élégance au poignet, la précision dans chaque détail</p>
            <a href="{{ path('app_collection') }}" class="cta-button">Voir la collection</a>
        </div>
    </section>

    <section class="best-sellers">
        <h2 class="section-title">Les Plus Vendus</h2>
        <div id="watchCarousel" class="carousel slide" data-bs-ride="carousel">
            <div class="carousel-inner">
                {% for watches_chunk in watches|batch(3) %}
                    <div class="carousel-item {{ loop.first ? 'active' : '' }}">
                        <div class="watches-grid">
                            {% for watch in watches_chunk %}
                                <div class="watch-card">
                                    <img src="{{ watch.picture }}" alt="{{ watch.name }}">
                                    <div class="watch-info">
                                        <h5>{{ watch.name }}</h5>
                                        <p class="watch-reference">Réf. {{ watch.reference }}</p>
                                        <p class="watch-price">{{ watch.price|number_format(0, ',', ' ') }} €</p>
                                        <a href="{{ path('app_watch_details', {'id': watch.id}) }}" class="btn-details">
                                            Voir les détails
                                        </a>
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                    </div>
                {% endfor %}
            </div>

            <button class="carousel-control-prev" type="button" data-bs-target="#watchCarousel" data-bs-slide="prev">
                <span class="carousel-control-prev-icon"></span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#watchCarousel" data-bs-slide="next">
                <span class="carousel-control-next-icon"></span>
            </button>
        </div>
    </section>

    <section class="particuliers">
        <h2 class="particuliers-title">Espace Particuliers</h2>
        <p class="particuliers-subtitle">Achetez et vendez vos montres de luxe entre passionnés</p>
        <a href="#" class="sell-button">Vendre ma montre</a>
        
        <div class="watches-grid">
            <div class="watch-card">
                <img src="{{ asset('images/test.webp') }}" alt="Rolex Datejust 41">
                <h3 class="watch-title">Rolex Datejust 41</h3>
                <p class="watch-state">État: Excellent</p>
                <p class="watch-price">Prix: 8,500 €</p>
                <p class="watch-seller">John Doe</p>
                <a href="#" class="contact-button">Contacter le vendeur</a>
            </div>
            
            <div class="watch-card">
                <img src="{{ asset('images/test.webp') }}" alt="Rolex Datejust 41">
                <h3 class="watch-title">Rolex Datejust 41</h3>
                <p class="watch-state">État: Excellent</p>
                <p class="watch-price">Prix: 8,500 €</p>
                <p class="watch-seller">John Doe</p>
                <a href="#" class="contact-button">Contacter le vendeur</a>
            </div>
            
            <div class="watch-card">
                <img src="{{ asset('images/test.webp') }}" alt="Rolex Datejust 41">
                <h3 class="watch-title">Rolex Datejust 41</h3>
                <p class="watch-state">État: Excellent</p>
                <p class="watch-price">Prix: 8,500 €</p>
                <p class="watch-seller">John Doe</p>
                <a href="#" class="contact-button">Contacter le vendeur</a>
            </div>
        </div>
    </section>

    <section class="team">
        <h2 class="team-title">Notre Équipe</h2>
        <div class="team-grid">
            <div class="team-card">
                <h3 class="team-member-name">John Doe</h3>
                <p class="team-member-role">Développeur</p>
            </div>
            
            <div class="team-card">
                <h3 class="team-member-name">John Doe</h3>
                <p class="team-member-role">Développeur</p>
            </div>
            
            <div class="team-card">
                <h3 class="team-member-name">John Doe</h3>
                <p class="team-member-role">Développeur</p>
            </div>
        </div>
    </section>

    <footer class="footer">
        <div class="footer-content">
            <div class="footer-section">
                <h3 class="footer-title">À propos</h3>
                <p class="footer-text">LuxWatch - Votre destination pour les montres de luxe</p>
            </div>
            
            <div class="footer-section">
                <h3 class="footer-title">Contact</h3>
                <a href="mailto:contact@luxwatch.com" class="footer-contact">Email: contact@luxwatch.com</a>
                <a href="tel:+33123456789" class="footer-contact">Tél: +33 1 23 45 67 89</a>
            </div>
        </div>
        <div class="footer-bottom">
            <p>© 2024 LuxWatch. Tous droits réservés.</p>
        </div>
    </footer>
{% endblock %}
